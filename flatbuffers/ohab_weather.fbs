namespace ohab_weather;

table Weather
{
    current: CurrentWeather;
    days: [Forecast];
}

table CurrentWeather
{
    outdoorTemperature: float;
    windDirection: float;
    windSpeed: float;
    pressure: float;
}

table Forecast
{
    minTemperature: float;
    maxTemperature: float;
    maxWindSpeed: float;
    dominantWindDirection: float;
    conditionCode: ubyte;
    cloudiness: float;
    snow: float;
    rain: float;
    showers: float;
}

root_type Weather;
